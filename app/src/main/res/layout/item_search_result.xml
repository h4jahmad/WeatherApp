<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="true"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingHorizontal="@dimen/space_very_large"
	android:paddingVertical="@dimen/padding_vertical_search_result">

	<TextView
		android:id="@+id/item_search_result_city_label"
		style="@style/Text.WeatherApp.SearchResult.City"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Las Vegas" />

	<TextView
		android:id="@+id/item_search_result_city_region"
		style="@style/Text.WeatherApp.SearchResult.Region"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/space_mini"
		tools:text="- Nevada" />

</LinearLayout>